generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Note {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  heading   String?
  content   String?
  color     String?
  creator   String?
  timestamp DateTime?
  position  Json?
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  user     String  @unique
  password String
  name     String?
}
